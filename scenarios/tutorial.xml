<scenario name="Tutorial">
    <introText>
        This is the tutorial!
    </introText>
    <objectives>
        <objective type="occupy" row="8" col="7" for_turns="2"/>
    </objectives>
    <startBalance>300</startBalance>
    <shop>
         <Unit id="0" experience="2" price="100"/>
         <Unit id="2" experience="1" price="120"/>
    </shop>
    <hexes><!-- Here we will shape a map, terrains, road etc. -->
        <Hex row="3" col="4" terrainType="0" initialFlag="0" isRoad="False"/>
        <Hex row="3" col="3" terrainType="1" initialFlag="0" isRoad="False"/>
        <Hex row="8" col="7" terrainType="0" initialFlag="graphics/flags/flag_italy.png" switchedFlag="graphics/flags/flag_france.png" name="Main base" initialOwner="1" isRoad="False"/>
    </hexes>
    <units> <!-- Here we will define all starting units and their positions -->
        <Unit id="0" player="0" row="6" col="4" experience="7"/>
        <Unit id="0" player="0" row="10" col="6" experience="2"/>
        <Unit id="2" player="0" row="12" col="6" experience="3"/>
        <Unit id="1" player="1" row="9" col="7" experience="3"/>
    </units>
</scenario>